class Solution {
public:
    bool isIsomorphic(string s, string t) {
        map<char,char>ss;
        map<char, char>tt;

        for (int i=0; i<s.size(); i++){
            char c1= s[i];
            char c2= t[i];

            //check mapping for s-->t
            if(ss.count(c1) && ss[c1]!= c2){   //here count function is used in maps to check whether the item lies in the map or not
                return false;
            }

            //check mapping for t-->s
            if(tt.count(c2) && tt[c2]!= c1){
                return false;
            }

            //store mapping
            ss[c1]=c2;
            tt[c2]=c1;
        }
        return true;
        

    }
};